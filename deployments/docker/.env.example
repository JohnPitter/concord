# Concord Central Server â€” Environment Variables
# Copy to .env and fill in values

# --- Server ---
SERVER_PORT=8080
CONCORD_ENV=production
CONCORD_JWT_SECRET=change-me-to-a-secure-random-string-at-least-32-chars

# --- GitHub OAuth ---
CONCORD_GITHUB_CLIENT_ID=your-github-client-id

# --- PostgreSQL ---
POSTGRES_USER=concord
POSTGRES_PASSWORD=change-me-to-a-secure-password
POSTGRES_DB=concord
POSTGRES_PORT=5432

# --- Redis ---
REDIS_PASSWORD=
REDIS_PORT=6379

# --- Logging ---
LOG_LEVEL=info

# --- TURN / WebRTC relay (recommended for production voice) ---
# Set to true to enable TURN credentials endpoint and coturn usage.
CONCORD_TURN_ENABLED=true
# Optional explicit TURN hostname/IP. Leave empty to use the request host from API.
TURN_HOST=
TURN_PORT=3478
# Set to 0 to disable `turns:` URL generation (requires TLS cert when enabled).
TURN_TLS_PORT=0
TURN_EXTERNAL_IP=203.0.113.10
TURN_SECRET=change-me-to-a-long-random-secret
TURN_CREDENTIAL_TTL=12h

# --- Auto Update (Watchtower) ---
# Poll interval in seconds for checking new images (server service is label-enabled)
WATCHTOWER_POLL_INTERVAL=60
