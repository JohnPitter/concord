# Concord Docker Compose â€” Environment Variables
# =============================================================================
# Copy this file to .env and replace all placeholder values with real secrets.
# NEVER commit the .env file to version control.
# =============================================================================

# ---- PostgreSQL -------------------------------------------------------------
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432

# ---- Redis ------------------------------------------------------------------
REDIS_PASSWORD=changeme
REDIS_PORT=6379

# ---- Concord Server ---------------------------------------------------------
SERVER_PORT=8080
METRICS_PORT=9090

# JWT secret for authentication tokens (minimum 32 characters in production)
JWT_SECRET=your-secure-jwt-secret-at-least-32-chars-long

# GitHub OAuth App Client ID (for device flow authentication)
GITHUB_CLIENT_ID=

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ---- PersonaPlex Translation (optional) ------------------------------------
PERSONAPLEX_URL=
PERSONAPLEX_API_KEY=

# ---- TURN Server (WebRTC NAT traversal) ------------------------------------
TURN_SECRET=your-turn-secret-change-me

# ---- Build Metadata (optional, injected at build time) ----------------------
APP_VERSION=0.1.0
GIT_COMMIT=
BUILD_DATE=
