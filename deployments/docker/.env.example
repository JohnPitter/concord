# Concord Central Server â€” Environment Variables
# Copy to .env and fill in values

# --- Server ---
SERVER_PORT=8080
CONCORD_ENV=production
CONCORD_JWT_SECRET=change-me-to-a-secure-random-string-at-least-32-chars

# --- GitHub OAuth ---
CONCORD_GITHUB_CLIENT_ID=your-github-client-id

# --- PostgreSQL ---
POSTGRES_USER=concord
POSTGRES_PASSWORD=change-me-to-a-secure-password
POSTGRES_DB=concord
POSTGRES_PORT=5432

# --- Redis ---
REDIS_PASSWORD=
REDIS_PORT=6379

# --- Logging ---
LOG_LEVEL=info

# --- Auto Update (Watchtower) ---
# Poll interval in seconds for checking new images (server service is label-enabled)
WATCHTOWER_POLL_INTERVAL=60
